<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_imv_course"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="@dimen/common_16dp"
            android:background="@mipmap/coursedefault"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:singleLine="true"
                android:layout_marginRight="@dimen/common_8dp"
                android:layout_marginTop="@dimen/common_8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="课程名称"
                android:textColor="@color/font_h1"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_8dp"
                android:layout_marginTop="@dimen/common_8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="bbbbbb"
                android:textColor="@color/primary_text"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_tv_brief_str"
                android:layout_below="@id/item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_4dp"
                android:text="课程简介："
                android:textColor="@color/primary_text"
                android:textSize="14sp" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_toRightOf="@+id/item_tv_brief_str"
                android:id="@+id/item_tv_brief"
                android:layout_below="@id/item_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/common_4dp"
                android:text="12356489989898989dfdfddfdfdfdf8989我哦哦对方898898989"
                android:textColor="@color/primary_text"

                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>